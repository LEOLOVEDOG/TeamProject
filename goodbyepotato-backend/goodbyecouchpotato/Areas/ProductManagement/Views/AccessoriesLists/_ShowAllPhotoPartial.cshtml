@model _AccessoriesViewModel
@inject GoodbyepotatoContext _context
@{
    AccessoriesList accessoriesList = await _context.AccessoriesLists.FindAsync(Model.PCode);
    // string imagePath = Path.Combine(Directory.GetCurrentDirectory(), "wwwroot", "images", accessoriesList.PImageShop);
    // bool checkimage = System.IO.File.Exists(accessoriesList.PImageAll);


    if (accessoriesList != null && accessoriesList.PImageAll != null )
    {

        <img src="@Url.Action("GetPictureAll",
             new { id = Model.PCode })"
             style="width:320px;height:240px"
             title="@Html.DisplayFor(model =>model.PName)"
             onclick="viewImage(this)" />
    }
    else
    {
        <img src="@Url.Content( "~/images/NoImage.png")"
             style="width:320px;height:260px"
             title="尚無圖片" />
    }
}

@model goodbyecouchpotato.Areas.OpinionManagement.viewmodel.Optionviewmodel

@* @{
    ViewData["Title"] = "Edit";
}
 *@
<h1>回信</h1>


<hr />

<div class="row" style="display:flex;justify-content: center; ">
    
    <div class="col-md-6">
        <div>
<a class="btn btn-info" asp-action="Index"> 返回列表</a>

        </div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FeedbackNo" readonly />
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control " style="background-color:aliceblue" disabled readonly />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" rows="6" cols="20" class="form-control" style="background-color:aliceblue;resize:none;" disabled readonly></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Submitted" class="control-label"></label>
                <input value="@Html.DisplayFor(model => model.Submitted)" class="form-control" style="background-color:aliceblue;resize:none;" disabled readonly />
                <span asp-validation-for="Submitted" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Pro_Content" class="control-label"></label>
                <textarea asp-for="Pro_Content" id="proContent" rows="6" cols="20" class="form-control" style="resize:none;"></textarea>
                <span asp-validation-for="Pro_Content" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="FeedbackNo" />
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Content">
            <input type="hidden" asp-for="Submitted" />
            <input type="hidden" asp-for="ProActive" />
            <input type="hidden" asp-for="ProDate" />


            <div class="form-group" style="text-align: right">
                <input type="submit" value="回覆" class="btn btn-info " />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    <script src="~/js/sweetalert.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('form').on('submit', function (e) {
                const proContent = $('#proContent').val().trim();
                if (proContent === '') {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'warning',
                        title: '提醒',
                        text: '請填寫回覆內容',
                        confirmButtonText: '確定',
                        confirmButtonColor: '#3085d6'
                    });
                    return false;
                }
            });
        });
    </script>
}

    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>再見！沙發Potato！</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="~/images/icon.png" type="image/x-icon" />
    <!--===============================================================================================-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!--===============================================================================================-->
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet">
    <!--===============================================================================================-->
    <link href="~/lib/linearicons-free-v1.0.0/icon-font.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/lib/gentelella-master/vendors/animate.css/animate.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/lib/css-hamburgers/hamburgers.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/lib/animsition/css/animsition.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/lib/gentelella-master/vendors/select2/dist/css/select2.min.css" rel="stylesheet">
    <!--===============================================================================================-->
    <link href="~/lib/gentelella-master/vendors/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">
    <!--===============================================================================================-->
    <link href="~/css/login/util.css" rel="stylesheet" />
    <link href="~/css/login/main.css?v=@DateTime.Now.Ticks" rel="stylesheet" />
    <!--===============================================================================================-->
</head>
<body>
    <div class="limiter">
        <div class="container-login100" style="background-image: url('@Url.Content("~/images/bg-01.png")');">
